mixin picture(options={})
  -
    const path = options.path;
    const name = options.name;
    const format = options.format;
    const width = options.width;
    const height = options.height;
    const altText = options.altText;

  picture(class!=attributes.class)
    source(type='image/webp', srcset="img/" + path + "/" + name + ".webp" + ", " + "img/" + path + "/" + name + "@2x.webp" + " 2x")
    img(src="img/" + path + "/" + name + "." + format, srcset= "img/" + path + "/" + name + "@2x." + format + " 2x", width= width, height= height, alt= altText)
